{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",                       /* Target modern Node.js environments (Node 18/20) */
    "module": "CommonJS",                     /* Standard module code generation for Node.js */
    "lib": ["ES2020", "DOM"],                 /* Include DOM for 'fetch' types if not using node-fetch explicitly */
    "moduleResolution": "node",               /* Resolve modules using Node.js style */
    
    /* Strict Type-Checking Options */
    "strict": true,                           /* Enable all strict type-checking options */
    "noImplicitAny": true,                    /* Raise error on expressions and declarations with an implied 'any' type */
    "strictNullChecks": true,                 /* Ensure null/undefined are handled explicitly */
    
    /* Module Interop */
    "esModuleInterop": true,                  /* Enables emit interoperability between CommonJS and ES Modules (crucial for 'he' package) */
    "allowSyntheticDefaultImports": true,     /* Allow default imports from modules with no default export */
    "forceConsistentCasingInFileNames": true, /* Ensure consistent casing in imports */
    
    /* Build Options */
    "skipLibCheck": true,                     /* Skip type checking of declaration files in node_modules */
    "resolveJsonModule": true,                /* Allow importing .json files */
    "isolatedModules": true,                  /* Ensure each file can be safely transpiled without relying on other imports */
    
    /* Path Configuration */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]                          /* Optional: Allows clean imports like '@/lib/utils' */
    }
  },
  "include": [
    "api/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}