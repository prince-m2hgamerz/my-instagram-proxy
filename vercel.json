{
  "builds": [
    {
      "src": "api/download.ts", 
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10,
        "memory": 1024
      }
    }
  ],
  
  "redirects": [
    {
      "source": "/",
      "destination": "/index.html",
      "permanent": true
    }
  ],
  
  "rewrites": [
    {
      "source": "/api/download(.*)",
      "destination": "/api/download.ts" 
    }
  ]
}