{
  "builds": [
    {
      "src": "api/download.ts", 
      "use": "@vercel/node",
      "config": {
        "maxDuration": 10,
        "memory": 1024
      }
    }
  ],
  
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/api/download(.*)",
      "destination": "/api/download.ts" 
    }
  ]
}